# ============================================================================
# LOCAL DEVELOPMENT ENVIRONMENT (.env.local)
# Copy this to .env.local for local development
# ============================================================================

NODE_ENV=development
DATABASE_TYPE=sqlite

# Service Ports (Local Development)
AI_SERVICE_PORT=3001
PM_ORCHESTRATOR_PORT=3002
ZOHO_SERVICE_PORT=3003
API_GATEWAY_PORT=3007
FRONTEND_PORT=3000
BULK_UPLOAD_PORT=3009

# API URLs (Local)
REACT_APP_API_URL=http://localhost:3007
REACT_APP_API_GATEWAY_URL=http://localhost:3007

# Development Security (Change in production)
JWT_SECRET=mangalm_jwt_secret_key_change_in_production
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d
SESSION_SECRET=mangalm_session_secret_change_in_production

# Development Settings
LOG_LEVEL=debug
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000

# Feature Flags
ENABLE_AI_PREDICTIONS=true
ENABLE_ZOHO_SYNC=false
ENABLE_CALL_PRIORITIZATION=true
ENABLE_PERFORMANCE_TRACKING=true

# Development Zoho (Optional)
ZOHO_CLIENT_ID=
ZOHO_CLIENT_SECRET=
ZOHO_REFRESH_TOKEN=
ZOHO_REDIRECT_URI=http://localhost:3003/auth/callback