# Mangalm Sales Assistant Environment Variables

# Environment
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mangalm_sales
DB_USER=mangalm
DB_PASSWORD=mangalm_secure_password
DATABASE_URL=postgresql://mangalm:mangalm_secure_password@localhost:5432/mangalm_sales

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# Zoho CRM Configuration
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token
ZOHO_REDIRECT_URI=http://localhost:3002/auth/callback
ZOHO_SCOPE=ZohoCRM.modules.ALL,ZohoCRM.settings.ALL

# AI Prediction Service
AI_SERVICE_PORT=3001
AI_MODEL_PATH=./models
AI_TRAINING_BATCH_SIZE=32
AI_PREDICTION_CONFIDENCE_THRESHOLD=0.7

# Zoho Integration Service
ZOHO_SERVICE_PORT=3002
ZOHO_SYNC_INTERVAL=3600000
ZOHO_BATCH_SIZE=100

# Sales Frontend
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:3001
REACT_APP_ZOHO_URL=http://localhost:3002

# JWT Configuration
JWT_SECRET=mangalm_jwt_secret_key_change_in_production
JWT_EXPIRY=1h

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# API Gateway (if using)
API_GATEWAY_PORT=8080
API_GATEWAY_URL=http://localhost:8080

# Data Import
CSV_FILE_PATH=C:\code\Dynamo\dynamo_data\database\microservice_migration\docs\user_journey\Invoices_Mangalam .csv

# Feature Flags
ENABLE_AI_PREDICTIONS=true
ENABLE_ZOHO_SYNC=true
ENABLE_CALL_PRIORITIZATION=true
ENABLE_PERFORMANCE_TRACKING=true

# Security
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=mangalm_session_secret_change_in_production
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100